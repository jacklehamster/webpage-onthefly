{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "lib": ["webworker", "dom", "dom.iterable"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
