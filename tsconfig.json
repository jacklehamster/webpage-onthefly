{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["webworker", "dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx" // For React JSX support
  },
  "include": ["src/**/*", "example/**/*"],
  "exclude": ["node_modules"]
}
